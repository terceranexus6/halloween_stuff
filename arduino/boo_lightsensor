/***   Global variables   ***/
int luz;

/***   Function declaration   ***/
/*** this works in a freeduino bq -teorically-***/

void setup()
{

  light=analogRead(A0); //lightsensor

  pinMode(7,OUTPUT); //led1

  pinMode(8,OUTPUT); //led2

}


void loop()
{
  if (luz < 200) { 
    digitalWrite(7,HIGH); //turn on leds
    digitalWrite(8,HIGH);
   }
  if (luz >= 200) {
    digitalWrite(7,HIGH); //turn off leds
    digitalWrite(8,HIGH);
   }

}

/***   Function definition   ***/
